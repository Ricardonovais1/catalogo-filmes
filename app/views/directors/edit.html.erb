
<div class="mx-auto p-4" style="width: 70%; background: #e9ecef">
<h1 class="pb-4">Atualize as informações do diretor <%= @director.name %></h1>

    <%= form_with model: @director do |f| %>
 
    <div class="input-group input-group-lg mt-3">
         <%= f.label :name, 'Nome:', class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %>
         <%= f.text_field :name, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" %>
    </div>
    <div class="input-group input-group-lg mt-3">
         <%= f.label :nationality, 'Nacionalidade:', class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %>
         <%= f.text_field :nationality, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" %>
    </div>
    <div class="input-group input-group-lg mt-3">
         <%= f.label :birth_year, 'Ano de nascimento:', class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %>
         <%= f.number_field :birth_year, class: "form-control", aria_label: "Sizing example input", aria_describedby: "inputGroup-sizing-lg" %>
    </div>
    <div class="input-group input-group-lg mt-3">
        <%= f.label :category_id, 'Gênero favorito:', class: "input-group-text fw-bold w-25", id: "inputGroup-sizing-lg" %>
        <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "form-control" %>
    </div>
    <div  class="d-grid">
        <%= f.submit 'Salvar', class: "btn btn-success mb-1 btn-lg mt-4", style: "margin-top: 1rem" %>
    </div>
    
    
    
<% end %>


<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>
</div>
